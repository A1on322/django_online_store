###############################################################################
###  Basic Django settings
###############################################################################
DJANGO_SECRET_KEY=changeme-super-secret
DEBUG=False                 # True ↔ Dev, False ↔ Prod
DOMAIN_NAME=http://127.0.0.1

###############################################################################
###  Database (PostgreSQL)
###############################################################################
DB_NAME=store_db
DB_USER=store_user
DB_PASSWORD=store_password
DB_HOST=db                  # service name from docker compose
DB_PORT=5432

###############################################################################
###  Redis / Celery
###############################################################################
REDIS_HOST=redis            # service name from docker compose
REDIS_PORT=6379

